{
  "name": "web-shell-emulator",
  "version": "0.1.0",
  "description": "An implementation of a simplified linux shell that runs in the browser.",
  "license": "ISC",
  "author": "Nilton Volpato <nilton@volpa.to>",
  "type": "module",
  "main": "dist/web-shell.umd.cjs",
  "module": "dist/web-shell.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/web-shell.js",
      "require": "./dist/web-shell.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite demo",
    "build": "vite build && tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@zenfs/core": "^2.4.4",
    "chalk": "^5.6.2",
    "ghostty-web": "^0.4.0"
  }
}
